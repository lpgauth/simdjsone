{erl_opts, [debug_info]}.
{deps, [
  {thoas, {git, "https://github.com/lpil/thoas.git"}},
  {jiffy, "1.1.1"}
]}.

{pre_hooks,  [{compile, "make -C c_src"}]}.
{post_hooks, [{clean,   "make -C c_src clean"}]}.

{plugins, [rebar3_hex]}.

{profiles, [
  {test, [
    {deps, [
      {thoas, {git, "https://github.com/lpil/thoas.git"}},
      {jiffy, "1.1.1"}
    ]},
    {extra_src_dirs, ["test"]}
  ]}
]}.
